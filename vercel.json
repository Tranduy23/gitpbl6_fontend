{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.phimnhalam.website/api/:path*"
    },
    {
      "source": "/movies/now-showing",
      "destination": "https://api.phimnhalam.website/movies/now-showing"
    },
    {
      "source": "/movies/featured",
      "destination": "https://api.phimnhalam.website/movies/featured"
    },
    {
      "source": "/movies/upcoming",
      "destination": "https://api.phimnhalam.website/movies/upcoming"
    },
    {
      "source": "/movies/popular",
      "destination": "https://api.phimnhalam.website/movies/popular"
    },
    {
      "source": "/subtitles/:path*",
      "destination": "https://cdn.phimnhalam.website/subtitles/:path*"
    },
    {
      "source": "/cdn/:path*",
      "destination": "https://cdn.phimnhalam.website/:path*"
    },
    {
      "source": "/ai/get",
      "destination": "https://api-facereg.shuneo.com/get"
    },
    {
      "source": "/ai/:path*",
      "destination": "https://api-facereg.shuneo.com/ai/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/cdn/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, HEAD, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "*"
        }
      ]
    },
    {
      "source": "/subtitles/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, HEAD, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "*"
        }
      ]
    },
    {
      "source": "/ai/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, HEAD, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "*"
        }
      ]
    },
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, HEAD, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "*"
        }
      ]
    }
  ]
}
