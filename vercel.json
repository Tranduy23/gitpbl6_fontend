{
  "buildCommand": "npm run build",
  "env": {
    "VITE_API_BASE_URL": "https://api.phimnhalam.website/api",
    "VITE_API_URL": "https://api.phimnhalam.website"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.phimnhalam.website/api/:path*"
    },
    {
      "source": "/movies/now-showing:path*",
      "destination": "https://api.phimnhalam.website/movies/now-showing:path*"
    },
    {
      "source": "/movies/featured:path*",
      "destination": "https://api.phimnhalam.website/movies/featured:path*"
    },
    {
      "source": "/movies/upcoming:path*",
      "destination": "https://api.phimnhalam.website/movies/upcoming:path*"
    },
    {
      "source": "/movies/popular:path*",
      "destination": "https://api.phimnhalam.website/movies/popular:path*"
    },
    {
      "source": "/subtitles/:path*",
      "destination": "https://cdn.phimnhalam.website/subtitles/:path*"
    },
    {
      "source": "/cdn/:path*",
      "destination": "https://cdn.phimnhalam.website/:path*"
    },
    {
      "source": "/ai/get",
      "destination": "https://api-facereg.shuneo.com/get"
    },
    {
      "source": "/ai/:path*",
      "destination": "https://api-facereg.shuneo.com/ai/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/cdn/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, HEAD, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "*"
        }
      ]
    },
    {
      "source": "/subtitles/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, HEAD, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "*"
        }
      ]
    },
    {
      "source": "/ai/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, HEAD, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "*"
        }
      ]
    },
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, HEAD, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "*"
        }
      ]
    }
  ]
}
